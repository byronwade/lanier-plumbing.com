{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
		"@/*": ["./*"],
		"@/components/*": ["./components/*"],
		"@/lib/*": ["./lib/*"],
		"@/hooks/*": ["lib/hooks/*"],
		"@/actions/*": ["lib/actions/*"],
		"@/content/*": ["./content/*"],
		"@/app/*": ["./app/*"],
		"@payload-config": ["payload.config.ts"]
	},
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "plugins": [
    {
      "name": "next"
    }
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
, "next.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
